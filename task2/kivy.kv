InputForm:
<InputForm>:
    # define variables - connect between kivy id's to python vars
    brickname: brickname
	orientation: "vertical"
	status:status
	BoxLayout:
	    orientation: "vertical"
	    # layout of the form
        BoxLayout:
            # layout for the labels
            padding: '5dp'
            Label:
                text: "Brick Name:"
                size_hint_y: 0.3
			TextInput:
			    id: brickname
			    text: "enter brick name"
			    on_focus: root.clean() # on focus set the text to ""
			    size_hint_y: 0.3
	        ToggleButton:
                text: 'Start'
                on_press: root.start() # on press tries to open connection with the robot
                size_hint_y: 0.3
        BoxLayout:
            Label:
                id: status
                text: "" # python updates the status at any stage
        BoxLayout: # the following buttons placed like this to give natural driving experience.
            Button:
                text: 'forward'
                on_press: root.forward() # call the relevant function in python for moving forward
        BoxLayout:
            Button:
                text: 'left'
                on_press: root.left()
            Button:
                text: 'right'
                on_press: root.right()
        BoxLayout:
            Button:
                text: 'stop'
                on_press: root.stop()

Form:
<Form>:
    # define variables - connect between kivy id's to python vars
    lX: lX # var for each axis label
    lY: lY
    lZ: lZ
    but: but
    lStatus: lStatus
	orientation: "vertical"
	BoxLayout:
	    # layout of the form
        BoxLayout:
            # layout for the labels
            orientation: "vertical"
            padding: '5dp'
            Label: # label for each axis
                id: lX
                text: "X:"
                size_hint_y: 0.3
            Label:
                id: lY
                text: "Y:"
                size_hint_y: 0.3
            Label:
                id: lZ
                text: "Z:"
                size_hint_y: 0.3
            Label:
                id: lStatus
                text: ""
                size_hint_y: 0.3
            ToggleButton: # start button
                id: but
                text: 'Start'
                on_press: root.do_toggle()
                size_hint_y: 0.3


